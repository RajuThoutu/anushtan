# Google Sheets API Configuration
GOOGLE_SHEET_ID="your_sheet_id_here"
GOOGLE_SHEETS_CLIENT_EMAIL="your_service_account_email@project.iam.gserviceaccount.com"
# Private key should be the full PEM string including headers
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Prisma Database URL
# For local development: file:./dev.db (relative to packages/database/prisma/schema.prisma)
# For production: postgresql://... or other provider
DATABASE_URL="file:./dev.db"

# NextAuth (Admin App)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret"

# Sanity (Web App)
NEXT_PUBLIC_SANITY_PROJECT_ID="your_sanity_project_id"
NEXT_PUBLIC_SANITY_DATASET="production"
NEXT_PUBLIC_SANITY_API_VERSION="2024-01-01"

# Twilio Configuration (For Questionnaire Workflow)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_FROM_NUMBER="+1234567890"
